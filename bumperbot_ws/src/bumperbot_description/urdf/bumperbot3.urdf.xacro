<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="bumperbot">
    <link name="base_footprint"/>

    <link name="base_link">
        <!-- inertial tag is required for the gazebo simulation-->
        <inertial>
            <origin xyz="0.0 0.0 0.04" rpy="0.0 0.25 0.3"/>
            <mass value="0.2573504e-01"/>
            <inertia ixx="2.2124416e-02" ixy="-1.2294101e-04" ixz="3.4938785e-04"
                     iyy="2.1193702e-02" iyz="-5.0120904e-05"
                     izz="2.0064271e-02"/>
        </inertial>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/> <!-- indicate the orientation and the position of the mesh base_link.STL with respect to the base_link -->
            <geometry>
                <mesh filename="package://bumperbot_description/meshes/base_link.STL"/>
            </geometry>
        </visual>
        
        <!-- collision tag is required for the gazebo simulation-->
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/> <!-- indicate the orientation and the position of the mesh base_link.STL with respect to the base_link -->
            <geometry>
                <mesh filename="package://bumperbot_description/meshes/base_link.STL"/>
            </geometry>
        </collision>    
    </link>    

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin rpy="0 0 0" xyz="0 0 0.033"/> <!-- indicate the orientation and the position between two reference frames between two links -->
    </joint>

    <link name="wheel_right_link">
        <!-- inertial tag is required for the gazebo simulation-->
        <inertial>
            <origin xyz="0.0 -0.014 0" rpy="0.0 0.0 0.0"/>
            <mass value="0.0530086090966721"/>
            <inertia ixx="1.88176" ixy="-1.2294101e-04" ixz="3.4938785e-04"
                     iyy="2.1193702e-02" iyz="-5.0120904e-05"
                     izz="2.0064271e-02"/>
        </inertial>
        
        <visual>
            <origin rpy="1.57 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://bumperbot_description/meshes/wheel_right_link.STL"/>
            </geometry>
        </visual>

        <collision>
            <origin rpy="1.57 0 0" xyz="0 -0.015 0"/>
            <geometry>
                <!-- we will use another thing to describe the geometry of the wheel beacuse stl is very expensive to simulate while the wheel is rotating -->
                <!-- <mesh filename="package://bumperbot_description/meshes/wheel_right_link.STL"/> -->
                 <sphere radius="0.33"/>
            </geometry>
        </collision>
    </link>

    <joint name="wheel_right_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_right_link"/>
        <axis xyz="0 1 0"/>
        <origin rpy="0 0 0" xyz="0 -0.07 0"/>
    </joint>

    <link name="wheel_left_link">
        <visual>
            <origin rpy="-1.57 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://bumperbot_description/meshes/wheel_left_link.STL"/>
            </geometry>
        </visual>

        <collision>
            <origin rpy="1.57 0 0" xyz="0 0.015 0"/>
            <geometry>
                <!-- we will use another thing to describe the geometry of the wheel beacuse stl is very expensive to simulate while the wheel is rotating -->
                <!-- <mesh filename="package://bumperbot_description/meshes/wheel_right_link.STL"/> -->
                 <sphere radius="0.33"/>
            </geometry>
        </collision>
    </link>

    <joint name="wheel_left_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_left_link"/>
        <axis xyz="0 1 0"/>
        <origin rpy="0 0 0" xyz="0 0.07 0"/>
    </joint>

    <link name="caster_front_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://bumperbot_description/meshes/caster_front_link.STL"/>
            </geometry>
        </visual>

        <collision>
            <origin rpy="0 0 0" xyz="0 0.0 0"/>
            <geometry>
                <!-- we will use another thing to describe the geometry of the wheel beacuse stl is very expensive to simulate while the wheel is rotating -->
                <!-- <mesh filename="package://bumperbot_description/meshes/wheel_right_link.STL"/> -->
                 <sphere radius="0.005"/>
            </geometry>
        </collision>
    </link>
    
    <joint name="caster_front_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_front_link"/>
        <origin rpy="0 0 0" xyz="0.04755 0.0 -0.0275"/>
    </joint>

    <link name="caster_rear_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://bumperbot_description/meshes/caster_rear_link.STL"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0.0 0"/>
            <geometry>
                <!-- we will use another thing to describe the geometry of the wheel beacuse stl is very expensive to simulate while the wheel is rotating -->
                <!-- <mesh filename="package://bumperbot_description/meshes/wheel_right_link.STL"/> -->
                 <sphere radius="0.005"/>
            </geometry>
        </collision>
    </link>
    
    <joint name="caster_rear_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_rear_link"/>
        <origin rpy="0 0 0" xyz="-0.04755 0.0 -0.0275"/>
    </joint>
    
    <link name="can_link">
        <visual>
            <origin rpy="1.53 0.0 0.0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://bumperbot_description/meshes/can.STL"/>
            </geometry>
        </visual>
    </link>
    
    <joint name="can_joint" type="fixed">
        <parent link="base_link"/>
        <child link="can_link"/>
        <origin rpy="0 0 0" xyz="-0.032 0.032 0.078"/>
    </joint>


</robot>